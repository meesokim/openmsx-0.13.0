            <volume>30000</volume>
          </sound>
          <rom>
            <sha1>49a1750c10e407293af6bce27a02e99307ceba12</sha1>
            <filename>sfg-01.rom</filename>
          </rom>
        </YamahaSFG>
      </secondary>
    </primary>
  </devices>
</msxconfig>
